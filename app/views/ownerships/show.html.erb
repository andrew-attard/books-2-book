<div class="container my-5">
  <div class="book-show card border-0 shadow">
    <div class="row no-gutters book-show-card">
      <div class="col-md-4 d-flex justify-content-center">
        <img src="<%= @ownership.book.cover_url %>" class="show-book-cover img-fluid" alt="<%= @ownership.book.title %> cover">
      </div>
      <div class="col-md-8">
        <div class="book-details card-body">
          <h1><%= @ownership.book.title %></h1>
          <p class="lead"><strong>Author:</strong> <%= @ownership.book.author %></p>
          <p class="lead"><i class="fa-solid fa-dollar-sign"></i>  <%= @ownership.price %></p>
          <p class="lead"><i class="fa-regular fa-square-check"></i>  <%= @ownership.condition %></p>
          <p class="lead"><%= @ownership.book.description %></p>
          <div class="row">
            <div class="col-md-4">
              <p><strong>Genre:</strong> <%= @ownership.book.genre %></p>
            </div>
            <div class="col-md-4">
              <p><strong>ISBN:</strong> <%= @ownership.book.isbn %></p>
            </div>
          </div>
          <div class="d-flex gap-2 mt-3">
            <%= link_to 'Back', ownerships_path, class: 'btn btn-secondary wishlist-btn' %>
            <%= link_to 'Edit', edit_ownership_path(@ownership), class: 'btn btn-secondary wishlist-btn' %>
            <%= link_to 'Delete', ownership_path(@ownership), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-secondary wishlist-btn' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
