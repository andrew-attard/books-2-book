<!-- app/views/ownerships/new.html.erb -->

<div class="container my-5">
  <h2>Claim Ownership of <%= @book.title %></h2>
  <%= form_with model: [@book, @ownership], local: true do |form| %>
    <div class="form-group">
      <%= form.label :price %>
      <%= form.number_field :price, class: "form-control", step: 0.01 %>
    </div>

    <div class="form-group">
      <%= form.label :condition %>
      <%= form.select :condition, ["Poor", "Fair", "Good", "Excellent", "Mint"], class: "form-control" %>
    </div>

    <%= form.submit "Claim Ownership", class: "btn btn-primary" %>
  <% end %>
</div>
