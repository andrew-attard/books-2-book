<h1 class="text-center my-4">Books List</h1>

<div class="container">
  <div class="row">
    <% @books.each do |book| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= link_to book.title, book_path(book), class: 'text-dark' %></h5>
            <p class="card-text"><strong>Author:</strong> <%= book.author %></p>
            <p class="card-text"><strong>Genre:</strong> <%= book.genre %></p>
            <%= link_to 'View Details', book_path(book), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
